{
    "name": "Customize Websites",
    "version": "1.0",
    "description": "does usefull stuff on websites",
    "manifest_version": 2,
    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "contextMenu.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://neue.radkersburger-bahn.at/*"
            ],
            "css": [
                "nrb_content.css"
            ]
        },
        {
            "matches": [
                "https://www.instagram.com/*/"
            ],
            "js": [
                "instagram_content.js"
            ]
        },
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "remove_cookie_banners.js"
            ]
        }
    ]
}